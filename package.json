  "license": "ISC",
  "devDependencies": {
    "husky": "^4.0.0",
    "lint-staged": "^10.0.0",
    "prettier": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json}": [
      "prettier --write",
      "npm t -- .",
      "git add"
    ],
    "**/*.{md}": [
      "prettier --write",
      "git add"
    ]
  }
}
